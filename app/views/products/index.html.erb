<%= link_to 'Sign Out','/users/sign_out', method: :delete %>
<h1>Products</h1>
<div>
  <%= form_tag '/products/search', method: :post do %>
  <%= label_tag :search %>
  <%= text_field_tag :search %>
  <%= submit_tag "Search" %>
  <% end %>
<table class ="table-hover">
</div>
<tr>
<th>Pedal</th>
<th>Price</th>
<th>Image</th>
<th>Description</th>
<th>In Stock?</th>
</tr>

  <tr>
  <% @products.each do |product| %>
  <td><a href = "http://localhost:3000/products/<%= product[:id] %>"><%= product.name %></a></td>
  <td><%= number_to_currency(product.price) %></td>
  # <td><img class = "center-block img-responsive"src = "<%= product.image_first %>"/></td>
  <td><%= product.description %></td>
  <td><%= product.stock %></td>
  </tr>
  <% end %>
  </table>
  <div><a href="http://localhost:3000/products/new">Add a new product</a></div>
  <h3><%= link_to "Order by price", "/products?view=order_by_price" %></h3>
  <h3><%= link_to "Order by price Descending", "/products?view=order_by_price_desc" %></h3>
  <h3><%= link_to "Show all", "/products?view=order_by_price" %></h3>

