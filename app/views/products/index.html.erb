<h1>Products</h1>

<table class ="table-hover">
<tr>
<th>Pedal</th>
<th>Price</th>
<th>Image</th>
<th>Description</th>
<th>In Stock?</th>
</tr>

  <tr>
  <% @products.each do |product| %>
  <td><a href = " http://localhost:3000/products/<%= product[:id] %>"><%= product.name %></a></td>
  <td><%= number_to_currency(product.price) %></td>
  <td><img class = "center-block img-responsive"src = "<%= product.image %>"/></td>
  <td><%= product.description %></td>
  <td><%= product.stock %></td>
  </tr>
  <% end %>
  </table>
  <div><a href="http://localhost:3000/products/new">Add a new product</a></div>
